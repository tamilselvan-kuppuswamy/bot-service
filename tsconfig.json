{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "outDir": "./dist"
  },
  "include": [
    "index.ts",
    "bot/**/*.ts",
    "routes/**/*.ts",
    "services/**/*.ts",
    "state/**/*.ts",
    "utils/**/*.ts",
    "utils/responseBuilder.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
